@model IEnumerable<Model.Products>
@{Layout = "~/Views/Shared/Shared.cshtml";}
@{
    foreach (var item in Model)
    {
        <li>
            <img src="/Content/images/@item.ImagePath" />
            <div>
                <h3>@item.Name</h3>
                <p>
                    Price : @item.Price.ToString("C")
                </p>
                <button class="styled-button">add to card</button>
            </div>
        </li>
    }
}